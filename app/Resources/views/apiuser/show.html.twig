{% extends 'base.html.twig' %}

{% block body %}
    <h1>Apiuser</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ apiUser.id }}</td>
            </tr>
            <tr>
                <th>Index</th>
                <td>{{ apiUser.index }}</td>
            </tr>
            <tr>
                <th>Indexstartat</th>
                <td>{{ apiUser.indexStartAt }}</td>
            </tr>
            <tr>
                <th>Integer</th>
                <td>{{ apiUser.integer }}</td>
            </tr>
            <tr>
                <th>Float</th>
                <td>{{ apiUser.float }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ apiUser.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ apiUser.surname }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ apiUser.fullname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ apiUser.email }}</td>
            </tr>
            <tr>
                <th>Bool</th>
                <td>{% if apiUser.bool %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('apiuser_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('apiuser_edit', { 'id': apiUser.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
